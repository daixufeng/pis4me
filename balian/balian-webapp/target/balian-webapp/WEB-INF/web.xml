<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
	<context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>com.balian.webapp.root</param-value>
    </context-param>
    
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j.properties</param-value>
    </context-param>

	<!-- NetBarSync -->
	<servlet>
		<servlet-name>netbarsync</servlet-name>
		<servlet-class>com.balian.app.servlet.NetBarSyncServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>netbarsync</servlet-name>
		<url-pattern>/netbarsync</url-pattern>
	</servlet-mapping>
	
	<!-- Login -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.balian.app.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- order add -->
	<servlet>
		<servlet-name>order-add</servlet-name>
		<servlet-class>com.balian.app.servlet.order.AddServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>order-add</servlet-name>
		<url-pattern>/order/add</url-pattern>
	</servlet-mapping>

	<!-- order edit -->
	<servlet>
		<servlet-name>order-edit</servlet-name>
		<servlet-class>com.balian.app.servlet.order.EditServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>order-edit</servlet-name>
		<url-pattern>/order/edit</url-pattern>
	</servlet-mapping>

	<!-- order edit -->
	<servlet>
		<servlet-name>order-save</servlet-name>
		<servlet-class>com.balian.app.servlet.order.SaveServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>order-save</servlet-name>
		<url-pattern>/order/save</url-pattern>
	</servlet-mapping>
	
	<!-- order delete -->
	<servlet>
		<servlet-name>order-delete</servlet-name>
		<servlet-class>com.balian.app.servlet.order.DeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>order-delete</servlet-name>
		<url-pattern>/order/delete</url-pattern>
	</servlet-mapping>

	<!-- order query -->
	<servlet>
		<servlet-name>order-query</servlet-name>
		<servlet-class>com.balian.app.servlet.order.ListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>order-query</servlet-name>
		<url-pattern>/order/query</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
