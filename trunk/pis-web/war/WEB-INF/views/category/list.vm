<table id="categorygrid"
	style="width: 800px; border-collapse: collapse;" class="tablestyle" border="1" cellspacing="0">
	<tbody>
		<tr class="headerstyle">
			<th style="width: 12px;"><input type="checkbox" /></th>
			<th>Category Name</th>
			<th>Type</th>
			<th style="width: 30px;">Edit</th>
		</tr>
		#foreach($o in $categories)
		<tr #if($foreach.index % 2 == 0) class="rowstyle" #else  class="altrowstyle" #end>
			<td><input type="checkbox" /></td>
			<td>$o.Name</td>
			<td>$o.DictionaryValue</td>
			<td><a id="$o.Id" href="/category/edit/$o.Id">Edit</a></td>
			</tr>
		#end
		<tr>
			<td colspan="4">$pager</td>
		</tr>
	</tbody>
</table>