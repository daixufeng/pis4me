<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net">
  <object id="dbContext" type="EfSample.Model.Ef.EfDbContext ,EfSample.Model.Ef" scope="request" singleton="false">
    <property name="Mappings">
      <list element-type="EfSample.Model.Ef.Mappings.IMapping ,EfSample.Model.Ef">
        <ref object="heroMapping"/>
        <ref object="raceMapping"/>
      </list>
    </property>
  </object>

  <object id="repositoryBase" abstract="true" scope="request" singleton="false">
    <constructor-arg index="0" ref="dbContext"/>
  </object>

  <object id="heroRepository" type="EfSample.Model.Ef.Repositories.EntityRepository&lt;Hero&gt;, EfSample.Model.Ef" parent="repositoryBase" scope="request" singleton="false"/>

  <object id="raceRepository" type="EfSample.Model.Ef.Repositories.EntityRepository&lt;Race&gt;, EfSample.Model.Ef" parent="repositoryBase" scope="request" singleton="false"/>
</objects>
