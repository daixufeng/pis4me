<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.pis.base.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>createuser</servlet-name>
		<servlet-class>com.pis.base.CreateUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>createuser</servlet-name>
		<url-pattern>/base/createuser</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>updateuser</servlet-name>
		<servlet-class>com.pis.base.UpdateUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateuser</servlet-name>
		<url-pattern>/base/updateuser</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
